{
  "swagger": "2.0",
  "info": {
    "title": "Favorite Things API",
    "description": "API for managing a list of people's favorite things",
    "version": "1.0.0"
  },
  "host": "localhost:8080",
  "basePath": "/",
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],

  "paths": {
    "/favorites": {
      "get": {
        "tags": ["Favorites"],
        "summary": "Get all favorite thing entries",
        "responses": {
          "200": {
            "description": "List of favorite things",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Favorite"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Favorites"],
        "summary": "Create a new favorite thing entry",
        "parameters": [
          {
            "in": "body",
            "name": "Favorite",
            "schema": {
              "$ref": "#/definitions/FavoriteInput"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created favorite thing entry"
          }
        }
      }
    },

    "/favorites/{id}": {
      "get": {
        "tags": ["Favorites"],
        "summary": "Get a single favorite thing entry",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Favorite thing found",
            "schema": {
              "$ref": "#/definitions/Favorite"
            }
          },
          "404": { "description": "Not found" }
        }
      },

      "put": {
        "tags": ["Favorites"],
        "summary": "Update a favorite thing entry",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "Favorite",
            "schema": {
              "$ref": "#/definitions/FavoriteInput"
            }
          }
        ],
        "responses": {
          "204": { "description": "Updated successfully" }
        }
      },

      "delete": {
        "tags": ["Favorites"],
        "summary": "Delete a favorite thing entry",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "204": { "description": "Deleted successfully" }
        }
      }
    }
  },

  "definitions": {
    "Favorite": {
      "type": "object",
      "properties": {
        "_id": { "type": "string", "example": "675abc123d9f4567890abcde" },
        "name": { "type": "string", "example": "Jazlyn" },
        "favoriteFood": { "type": "string", "example": "Pizza" },
        "favoriteColor": { "type": "string", "example": "Purple" },
        "favoriteAnimal": { "type": "string", "example": "Cat" }
      }
    },
    "FavoriteInput": {
      "type": "object",
      "required": ["name"],
      "properties": {
        "name": { "type": "string", "example": "Jazlyn" },
        "favoriteFood": { "type": "string", "example": "Pizza" },
        "favoriteColor": { "type": "string", "example": "Purple" },
        "favoriteAnimal": { "type": "string", "example": "Cat" }
      }
    }
  }
}
